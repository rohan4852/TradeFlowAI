# AI Trading Platform Environment Configuration
# Copy this file to .env and update with your actual values

# Environment
ENVIRONMENT=development

# Application
DEBUG=true
SECRET_KEY=your-secret-key-here

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/ai_trading
REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET_KEY=your-jwt-secret-key-here
PASSWORD_MIN_LENGTH=12
MAX_LOGIN_ATTEMPTS=5

# API Keys - Data Sources
NEWS_API_KEY=your-news-api-key-here
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key-here
FINNHUB_API_KEY=your-finnhub-key-here

# Social Media APIs
TWITTER_API_KEY=your-twitter-api-key-here
TWITTER_API_SECRET=your-twitter-api-secret-here
REDDIT_CLIENT_ID=your-reddit-client-id-here
REDDIT_CLIENT_SECRET=your-reddit-client-secret-here

# AI/ML APIs
OPENAI_API_KEY=your-openai-api-key-here

# Broker Integration
ALPACA_API_KEY=your-alpaca-api-key-here
ALPACA_SECRET_KEY=your-alpaca-secret-key-here
ALPACA_PAPER_TRADING=true

# Interactive Brokers (when available)
IB_USERNAME=your-ib-username-here
IB_PASSWORD=your-ib-password-here
IB_ACCOUNT_ID=your-ib-account-id-here

# Rate Limiting
RATE_LIMIT_DEFAULT=1000
RATE_LIMIT_TRADING=100
RATE_LIMIT_DATA=5000

# Real-time Configuration
WEBSOCKET_HEARTBEAT_INTERVAL=30
PREDICTION_UPDATE_INTERVAL=300
RISK_CHECK_INTERVAL=60

# Performance
API_TIMEOUT_SECONDS=30
DATABASE_POOL_SIZE=20
CACHE_TTL_SECONDS=3600

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/ai_trading.log

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173