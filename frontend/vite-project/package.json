    "react-icons": "^4.12.0",
    "react-intersection-observer": "^9.5.0",
    "react-router-dom": "^6.8.0",
    "styled-components": "^6.1.19"
  },
  "devDependencies": {
    "@axe-core/react": "^4.8.0",
